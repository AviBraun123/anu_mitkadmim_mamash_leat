@model anu_mitkadmim_mamash_leat.Models.Rating

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<hr />
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6 editBox">
        <center>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="showcase">
                <h2>Express Your Opinion</h2>
                <div class="rating-system1">
                  <input type="radio" name='rate' id="star5" asp-for="rate" value="5"/>
                  <label for="star5" class="plusrate"></label>

                  <input type="radio" name='rate' id="star4" asp-for="rate" value="4"/>
                  <label for="star4" class="plusrate"></label>

                  <input type="radio" name='rate' id="star3" asp-for="rate" value="3"/>
                  <label for="star3" class="plusrate"></label>
 
                  <input type="radio" name='rate' id="star2" asp-for="rate" value="2"/>
                  <label for="star2" class="plusrate"></label>

                  <input type="radio" name='rate' id="star1" asp-for="rate" value="1"/>
                  <label for="star1" class="plusrate"></label>

                  <div class="text"></div>
                </div>
            </div>
                <div class="form-group">
                    <label asp-for="feedback" class="control-label">Tell Us What On Your Mind</label>
                    <input asp-for="feedback" class="form-control" />
                    <span asp-validation-for="feedback" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="name" class="control-label">Your Name</label>
                    <input asp-for="name" class="form-control" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                <br/>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </form>
        </center>
        <a asp-action="Index">Back to List</a>
    </div>
    <div class="col-md-3"></div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
